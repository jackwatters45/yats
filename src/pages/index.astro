<script>
  document.addEventListener('DOMContentLoaded', function () {
    const prefersDarkMode =
      window.matchMedia &&
      window.matchMedia('(prefers-color-scheme: dark)').matches;

    const darkTeamSendImg1 =
      'https://res.cloudinary.com/drheg5d7j/image/upload/v1714179639/teams-send-groups-dark_cxwusq.webp';

    const darkTeamSendImg2 =
      'https://res.cloudinary.com/drheg5d7j/image/upload/v1714179767/team-send-message-dark_ndyc4o.webp';

    const lightTeamSendImg1 =
      'https://res.cloudinary.com/drheg5d7j/image/upload/v1714179497/team-send-groups_gbmaqv.webp';

    const lightTeamSendImg2 =
      'https://res.cloudinary.com/drheg5d7j/image/upload/v1714179747/team-send-message_fohdlj.webp';

    const teamSendImg1 = document.querySelector(
      '.team-send-img1',
    ) as HTMLImageElement;

    const teamSendImg2 = document.querySelector(
      '.team-send-img2',
    ) as HTMLImageElement;
    if (prefersDarkMode) {
      document.documentElement.classList.add('dark');

      if (teamSendImg1) teamSendImg1.src = darkTeamSendImg1;

      if (teamSendImg2) teamSendImg2.src = darkTeamSendImg2;
    } else {
      document.documentElement.classList.remove('dark');

      if (teamSendImg1) teamSendImg1.src = lightTeamSendImg1;

      if (teamSendImg2) teamSendImg2.src = lightTeamSendImg2;
    }
  });
</script>
