  </section>
  <div class="border-b dark:border-mate-white/10 w-full"></div>
  <section
    class="flex flex-col-reverse lg:flex-row items-center gap-12 lg:gap-24 max-w-screen-xl justify-center py-16 md:py-20 lg:py-24 px-8 xs:px-16"
  >
    <div
      class="w-11/12 sm:w-4/5 md:w-3/4 mx-auto lg:w-2/3 flex flex-wrap lg:-mx-4 justify-center pt-4 rounded-md"
    >
      <img
        src={undefined}
        alt=""
        class="rounded-md team-send-img2 shadow-2xl"
      />
    </div>
    <div class="mx-auto lg:mx-auto w-11/12 sm:w-4/5 md:w-3/4 lg:w-1/2">
      <div
        class="text-sm sm:text-base pb-6 font-bold text-mate-green dark:text-mate-light-green"
      >
        Connect your communication channels
      </div>
      <h3
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold king-wide text-mate-grey dark:text-mate-white"
      >
        Organize Efficently
      </h3>
      <div
        class="text-mate-muted-dark dark:text-mate-muted-light lg:text-lg text-base py-12 max-w-screen-sm"
      >
        Team Send is the only platform that allows you to connect all your
        informal communication channels in one place. Coordinate with your team
        across all platforms.
      </div>
      <ul class="pl-5 list-disc space-y-4">
        <li class="">
          Leverage your existing Twilio account or our built-in SMS
          (pay-as-you-go) to send text messages to your team.
        </li>
        <li class="">
          Send emails to your team members. Just connect your gmail account and
          you're good to go.
        </li>
        <li class="">
          Connect to your GroupMe groups and add bots that can send and listen
          to messages.
        </li>
      </ul>
    </div>
  </section>
  <section>
    <MailingForm client:idle />
  </section>
</Layout>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const darkTeamSendImg1 =
      'https://res.cloudinary.com/drheg5d7j/image/upload/v1714271048/ts-groups-dark_wn3y0b.webp';

    const darkTeamSendImg2 =
      'https://res.cloudinary.com/drheg5d7j/image/upload/v1714271048/ts-group-send-dark_loyysm.webp';

    const lightTeamSendImg1 =
      'https://res.cloudinary.com/drheg5d7j/image/upload/v1714271048/ts-groups-light_dtmve3.webp';

    const lightTeamSendImg2 =
      'https://res.cloudinary.com/drheg5d7j/image/upload/v1714271048/ts-group-send-light_zxtoqq.webp';

    const teamSendImg1 = document.querySelector(
      '.team-send-img1',
    ) as HTMLImageElement;

    const teamSendImg2 = document.querySelector(
      '.team-send-img2',
    ) as HTMLImageElement;

    function updateImages(prefersDarkMode: boolean) {
      if (prefersDarkMode) {
        document.documentElement.classList.add('dark');
        if (teamSendImg1) teamSendImg1.src = darkTeamSendImg1;
        if (teamSendImg2) teamSendImg2.src = darkTeamSendImg2;
      } else {
        document.documentElement.classList.remove('dark');
        if (teamSendImg1) teamSendImg1.src = lightTeamSendImg1;
        if (teamSendImg2) teamSendImg2.src = lightTeamSendImg2;
      }
    }

    const darkModeMediaQuery = window.matchMedia(
      '(prefers-color-scheme: dark)',
    );
    updateImages(darkModeMediaQuery.matches);

    darkModeMediaQuery.addEventListener('change', (event) => {
      updateImages(event.matches);
    });
  });
</script>
