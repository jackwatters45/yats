  <section
    class="flex flex-col lg:flex-row items-center gap-12 lg:gap-24 max-w-screen-xl justify-center py-16 md:py-20 lg:py-24 px-8 xs:px-16"
    id="products"
  >
    <div class="mx-auto lg:mx-auto w-11/12 sm:w-4/5 md:w-3/4 lg:w-1/2">
