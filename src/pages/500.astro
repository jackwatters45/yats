---
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
---

return (
<Layout>
  <div
    class="flex flex-col items-center justify-center space-y-4 py-16 text-center md:py-28 lg:py-36"
  >
    <div class="space-y-2">
      <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">
        Server Error
      </h1>
      <p
        class="max-w-[600px] text-stone-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-stone-400"
      >
        Sorry, we couldn&apos;t load the page. Please try again in a few
        moments.
      </p>
    </div>
    <div class="space-x-4">
      <Button variant="outline">
        <a href="/">Go home</a>
      </Button>
      <Button variant="outline" id="go-back"> Go back </Button>
    </div>
  </div>
</Layout>
<script>
  function handleGoBack() {
    window.history.back();
  }

  document.getElementById('go-back')?.addEventListener('click', handleGoBack);
</script>
